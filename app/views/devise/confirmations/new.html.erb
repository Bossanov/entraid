<div class="container" style="height: 760px;">
  <div class="cell-xs-12">
    <div class="block-center" style="max-width: 520px">
      <h2>Me renvoyer les instructions de confirmation</h2>
      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :confirmation_token %>
        <div class="form-inputs">
          <%= f.input :email, label:"Votre email", required: true, autofocus: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Renvoyer les instructions de confirmation" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
