<div class="container" style="height: 760px;">
  <div class="cell-xs-12">
    <div class="block-center" style="max-width: 520px">
      <h2>Vous avez oublié votre mot de passe?</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, label:"Votre email", required: true, autofocus: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Envoyez moi les instructions pour recréer un mot de passe " %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
